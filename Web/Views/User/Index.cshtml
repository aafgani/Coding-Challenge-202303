@model User

<div class="text-center">
    <form asp-action="Create" id="form-action" method="post" class="row row-cols-lg-auto g-3 align-items-center" role="form">
        <div class="col-12">
            <label class="visually-hidden" for="inlineFormInputGroupUsername">Username</label>
            <div class="input-group">
                <input asp-for="Number" class="form-control" placeholder="n User" />
            </div>
        </div>

        <div class="col-12">
            <input type="submit" id="form-button" class="btn btn-primary" value="Submit" />
        </div>
    </form>
</div>
